alias composerdl="curl -sS https://getcomposer.org/installer | php"
alias dnsflush="dscacheutil -flushcache ; sudo killall -HUP mDNSResponder;"
alias symfcache="rm -rf app/cache/*"
alias rake="bundle exec rake"
alias port="sudo lsof -i"
alias ll="ls -la"
alias la="ls -A"
alias psg="ps aux | grep -v grep | grep -i -e VSZ -e"
alias df="df -Tha --total"
alias du="du -ach | sort -h"
alias free="free -mt"
alias sshcopy="pbcopy < ~/.ssh/id_rsa.pub"
alias gitvoodoo="ssh-add -D; ssh-add ~/.ssh/id_rsa; git config user.email 'voodoogq@gmail.com';"
alias gitnerd="ssh-add -D; ssh-add ~/.ssh/id_rsa_nerdery; git config user.email 'ssmith+github@nerdery.com';"
alias sas="ssh ssmith@shaneallensmith.com"

# IP Helpers
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"

# Directory Traversal
alias .2="cd ../../"
alias .3="cd ../../../"
alias .4="cd ../../../../"
alias .5="cd ../../../../../"


